using DevExpress.XtraEditors;
using System;
using System.ComponentModel;
using System.Diagnostics;
using System.Drawing;
using System.Net;
using System.Net.Sockets;
using System.Text;
using System.Threading;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace ChatSocketApp
{
    public partial class XtraForm1 : XtraForm
    {
        private Socket clientSocket;
        private string username;
        private bool isConnected = false;
        private BindingList<ChatMessage> messages = new BindingList<ChatMessage>();

        // Server control
        private Task serverTask;
        private CancellationTokenSource serverCts;

        public XtraForm1()
        {
            InitializeComponent();
        }

        private void XtraForm1_Load(object sender, EventArgs e)
        {
            try
            {
                // Ensure username box is editable and focused initially so user can type
                if (usernameTextEdit != null)
                {
                    try { usernameTextEdit.Properties.ReadOnly = false; } catch { }
                    usernameTextEdit.Enabled = true;
                    try { usernameTextEdit.SelectAll(); } catch { }
                    usernameTextEdit.Focus();
                }

                if (messageTextEdit != null)
                {
                    messageTextEdit.Properties.ReadOnly = false;
                    messageTextEdit.Enabled = true;
                    // don't steal focus from username on load
                }
            }
            catch { }
        }

        protected override void OnShown(EventArgs e)
        {
            base.OnShown(e);
            try
            {
                // If username is empty, keep focus there; otherwise focus the message box
                if (usernameTextEdit != null && string.IsNullOrWhiteSpace(usernameTextEdit.Text))
                {
                    try { usernameTextEdit.Properties.ReadOnly = false; } catch { }
                    usernameTextEdit.Enabled = true;
                    try { usernameTextEdit.SelectAll(); } catch { }
                    usernameTextEdit.Focus();
                    try { usernameTextEdit.SelectionStart = usernameTextEdit.Text.Length; } catch { }
                }
                else if (messageTextEdit != null)
                {
                    messageTextEdit.Properties.ReadOnly = false;
                    messageTextEdit.Enabled = true;
                    messageTextEdit.Focus();
                    messageTextEdit.SelectAll();
                    messageTextEdit.SelectionStart = messageTextEdit.Text.Length;
                }
            }
            catch { }
        }

        private void NewWindowButton_Click(object sender, EventArgs e)
        {
            try
            {
                var psi = new ProcessStartInfo
                {
                    FileName = Application.ExecutablePath,
                    UseShellExecute = true
                };
                Process.Start(psi);
            }
            catch (Exception ex)
            {
                XtraMessageBox.Show($"Yeni pencere açılamadı: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void ServerStartButton_Click(object sender, EventArgs e)
        {
            try
            {
                if (serverTask != null && !serverTask.IsCompleted)
                {
                    XtraMessageBox.Show("Sunucu zaten çalışıyor", "Bilgi", MessageBoxButtons.OK, MessageBoxIcon.Information);
                    return;
                }

                serverCts = new CancellationTokenSource();
                var token = serverCts.Token;

                int port = Convert.ToInt32(portSpinEdit.Value);

                serverTask = Task.Run(() =>
                {
                    try
                    {
                        var server = new ChatServer();
                        server.StartServer(port, token);
                    }
                    catch (OperationCanceledException)
                    {
                        // stopped
                    }
                    catch (Exception ex)
                    {
                        this.Invoke((Action)(() => XtraMessageBox.Show($"Sunucu hatası: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error)));
                    }
                }, token);

                serverStartButton.Enabled = false;
                serverStopButton.Enabled = true;
                statusLabel.Text = "✓ Sunucu Çalışıyor";
                statusLabel.Appearance.ForeColor = Color.Green;
            }
            catch (Exception ex)
            {
                XtraMessageBox.Show($"Sunucu başlatılamadı: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void ServerStopButton_Click(object sender, EventArgs e)
        {
            try
            {
                if (serverCts != null)
                {
                    serverCts.Cancel();
                }

                serverStartButton.Enabled = true;
                serverStopButton.Enabled = false;
                statusLabel.Text = "❌ Sunucu Durdu";
                statusLabel.Appearance.ForeColor = Color.Red;
            }
            catch (Exception ex)
            {
                XtraMessageBox.Show($"Sunucu durdurulamadı: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void ConnectButton_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(usernameTextEdit.Text))
            {
                XtraMessageBox.Show("Lütfen kullanıcı adı girin!", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            username = usernameTextEdit.Text.Trim();

            try
            {
                clientSocket = new Socket(AddressFamily.InterNetwork, SocketType.Stream, ProtocolType.Tcp);
                clientSocket.Connect(new IPEndPoint(IPAddress.Parse(serverTextEdit.Text.Trim()), Convert.ToInt32(portSpinEdit.Value)));
                isConnected = true;

                // Send connect message
                string connectMsg = $"CONNECT:{username}";
                clientSocket.Send(Encoding.UTF8.GetBytes(connectMsg));

                statusLabel.Text = "✓ Bağlı";
                statusLabel.Appearance.ForeColor = Color.Green;
                connectButton.Enabled = false;
                disconnectButton.Enabled = true;
                sendButton.Enabled = true;
                usernameTextEdit.Enabled = false;
                serverTextEdit.Enabled = false;
                portSpinEdit.Enabled = false;

                // Add self to users list
                try
                {
                    if (usersListControl != null && !usersListControl.Items.Contains(username))
                        usersListControl.Items.Add(username);
                }
                catch { }

                AddSystemMessage($"{username} sunucuya bağlandı");

                Task.Run(() => ReceiveMessages());
            }
            catch (Exception ex)
            {
                XtraMessageBox.Show($"Bağlantı hatası: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
                isConnected = false;
            }
        }

        private void DisconnectButton_Click(object sender, EventArgs e)
        {
            Disconnect();
        }

        private void SendButton_Click(object sender, EventArgs e)
        {
            if (!isConnected || string.IsNullOrWhiteSpace(messageTextEdit.Text))
            {
                XtraMessageBox.Show("Bağlı değilsiniz veya mesaj boş!", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            try
            {
                string message = messageTextEdit.Text.Trim();
                string fullMsg = $"{username}: {message}";
                byte[] data = Encoding.UTF8.GetBytes(fullMsg);
                clientSocket.Send(data);

                AddMessage(username, message, "Benden");
                messageTextEdit.Clear();
            }
            catch (Exception ex)
            {
                XtraMessageBox.Show($"Mesaj gönderme hatası: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void MessageTextEdit_KeyDown(object sender, KeyEventArgs e)
        {
            // Enter to send, Shift+Enter for newline
            if (e.KeyCode == Keys.Enter && !e.Shift)
            {
                e.SuppressKeyPress = true; // prevent newline
                if (sendButton != null && sendButton.Enabled)
                {
                    SendButton_Click(sendButton, EventArgs.Empty);
                }
            }
        }

        private void ClearButton_Click(object sender, EventArgs e)
        {
            try
            {
                messages.Clear();
                if (messageListControl != null)
                    messageListControl.Items.Clear();
                AddSystemMessage("Mesajlar temizlendi");
            }
            catch { }
        }

        private void UsersListControl_DoubleClick(object sender, EventArgs e)
        {
            try
            {
                var lb = sender as ListBoxControl;
                if (lb != null && lb.SelectedItem != null)
                {
                    string user = lb.SelectedItem.ToString();
                    messageTextEdit.Focus();
                    messageTextEdit.SelectionStart = messageTextEdit.Text.Length;
                    messageTextEdit.SelectedText = "@" + user + " ";
                }
            }
            catch { }
        }

        private void ReceiveMessages()
        {
            byte[] buffer = new byte[4096];

            try
            {
                while (isConnected)
                {
                    int bytesRead = clientSocket.Receive(buffer);

                    if (bytesRead > 0)
                    {
                        string receivedMsg = Encoding.UTF8.GetString(buffer, 0, bytesRead);

                        this.Invoke((Action)(() =>
                        {
                            if (receivedMsg.StartsWith("CONNECT:"))
                            {
                                string user = receivedMsg.Replace("CONNECT:", "");
                                AddSystemMessage($"{user} sohbete katıldı");
                            }
                            else if (receivedMsg.Contains(":"))
                            {
                                string[] parts = receivedMsg.Split(new[] { ':' }, 2);
                                if (parts.Length =