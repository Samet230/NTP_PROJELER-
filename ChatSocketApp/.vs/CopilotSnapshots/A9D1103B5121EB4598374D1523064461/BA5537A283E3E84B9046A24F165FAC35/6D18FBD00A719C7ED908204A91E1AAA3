            bottomPanel.Controls.Add(inputTable);

            messageTextBox = new TextBox();
            messageTextBox.Multiline = true;
            messageTextBox.ScrollBars = ScrollBars.Vertical;
            messageTextBox.Dock = DockStyle.Fill;
            messageTextBox.KeyDown += MessageTextBox_KeyDown;
            inputTable.Controls.Add(messageTextBox, 0, 0);

            sendButton = new Button();
            sendButton.Text = "Gönder";
            sendButton.Dock = DockStyle.Fill;
            sendButton.Enabled = false;
            sendButton.Click += SendButton_Click;
            inputTable.Controls.Add(sendButton, 1, 0);

            var clearButton = new Button();
            clearButton.Text = "Temizle";
            clearButton.Dock = DockStyle.Fill;
            clearButton.Click += (s, e) => { messageListBox.Items.Clear(); messages.Clear(); AddSystemMessage("Mesajlar temizlendi"); };
            inputTable.Controls.Add(clearButton, 2, 0);

            // Ensure controls z-order
            mainSplit.BringToFront();
        }

        private void ConnectButton_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(usernameTextBox.Text))
            {
                MessageBox.Show("Lütfen kullanıcı adı girin!", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            username = usernameTextBox.Text.Trim();

            try
            {
                clientSocket = new Socket(AddressFamily.InterNetwork, SocketType.Stream, ProtocolType.Tcp);
                clientSocket.Connect(new IPEndPoint(IPAddress.Parse(serverTextBox.Text), (int)portNumericUpDown.Value));
                isConnected = true;

                // Bağlantı mesajı gönder
                string connectMsg = $"CONNECT:{username}";
                clientSocket.Send(Encoding.UTF8.GetBytes(connectMsg));

                statusLabel.Text = "✓ Bağlı";
                statusLabel.ForeColor = Color.Green;
                connectButton.Enabled = false;
                disconnectButton.Enabled = true;
                sendButton.Enabled = true;
                usernameTextBox.Enabled = false;
                serverTextBox.Enabled = false;
                portNumericUpDown.Enabled = false;

                AddSystemMessage($"{username} sunucuya bağlandı");

                Task.Run(() => ReceiveMessages());
            }
            catch (Exception ex)
            {
                MessageBox.Show($"Bağlantı hatası: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
                isConnected = false;
            }
        }

        private void DisconnectButton_Click(object sender, EventArgs e)
        {
            Disconnect();
        }

        private void SendButton_Click(object sender, EventArgs e)
        {
            if (!isConnected || string.IsNullOrEmpty(messageTextBox.Text))
            {
                MessageBox.Show("Bağlı değilsiniz veya mesaj boş!", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            try
            {
                string message = messageTextBox.Text.Trim();
                string fullMsg = $"{username}: {message}";
                byte[] data = Encoding.UTF8.GetBytes(fullMsg);
                clientSocket.Send(data);

                AddMessage(username, message, "Benden");
                messageTextBox.Clear();
            }
            catch (Exception ex)
            {
                MessageBox.Show($"Mesaj gönderme hatası: {ex.Message}", "Hata", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void MessageTextBox_KeyDown(object sender, KeyEventArgs e)
        {
            // Enter to send, Shift+Enter for newline
            if (e.KeyCode == Keys.Enter && !e.Shift)
            {
                e.SuppressKeyPress = true; // prevent newline
                if (sendButton != null && sendButton.Enabled)
                {
                    SendButton_Click(sendButton, EventArgs.Empty);
                }
            }
        }

        private void ReceiveMessages()
        {
            byte[] buffer = new byte[4096];

            try
            {
                while (isConnected)
                {
                    int bytesRead = clientSocket.Receive(buffer);

                    if (bytesRead > 0)
                    {
                        string receivedMsg = Encoding.UTF8.GetString(buffer, 0, bytesRead);

                        this.Invoke((Action)(() =>
                        {
                            if (receivedMsg.StartsWith("CONNECT:"))
                            {
                                string user = receivedMsg.Replace("CONNECT:", "");
                                AddSystemMessage($"{user} sohbete katıldı");
                                if (usersListBox != null && !usersListBox.Items.Contains(user))
                                    usersListBox.Items.Add(user);
                            }
                            else if (receivedMsg.Contains(":"))
                            {
                                string[] parts = receivedMsg.Split(new[] { ':' }, 2);
                                if (parts.Length == 2)
                                {
                                    AddMessage(parts[0], parts[1].Trim(), "Diğerleri");
                                }
                            }
                        }));
                    }
                    else
                    {
                        isConnected = false;
                    }
                }
            }
            catch
            {
                if (isConnected)
                {
                    this.Invoke((Action)(() =>
                    {
                        MessageBox.Show("Sunucu bağlantısı kesildi!", "Bağlantı Hatası", MessageBoxButtons.OK, MessageBoxIcon.Error);
                        Disconnect();
                    }));
                }
            }
        }

        private void AddMessage(string sender, string messageText, string type)
        {
            var msg = new ChatMessage
            {
                Gönderen = sender,
                Mesaj = messageText,
                Zaman = DateTime.Now.ToString("HH:mm:ss"),
                Tip = type
            };

            messages.Add(msg);

            if (messageListBox != null)
            {
                messageListBox.Items.Add($"{msg.Zaman} {msg.Gönderen}: {msg.Mesaj}");
                try { messageListBox.SelectedIndex = messageListBox.Items.Count - 1; } catch { }
            }
        }

        private void AddSystemMessage(string message)
        {
            var msg = new ChatMessage
            {
                Gönderen = "SİSTEM",
                Mesaj = message,
                Zaman = DateTime.Now.ToString("HH:mm:ss"),
                Tip = "Sistem"
            };

            messages.Add(msg);

            if (messageListBox != null)
            {
                messageListBox.Items.Add($"{msg.Zaman} {msg.Gönderen}: {msg.Mesaj}");
                try { messageListBox.SelectedIndex = messageListBox.Items.Count - 1; } catch { }
            }

            // Update users list when someone joins / leaves (basic parsing)
            try
            {
                if (usersListBox != null && message.EndsWith("sohbete katıldı"))
                {
                    string user = message.Substring(0, message.IndexOf(" sohbete katıldı", StringComparison.Ordinal));
                    if (!usersListBox.Items.Contains(user))
                        usersListBox.Items.Add(user);
                }
                else if (usersListBox != null && message.EndsWith("çıkış yaptı"))
                {
                    string user = message.Substring(0, message.IndexOf(" çıkış yaptı", StringComparison.Ordinal));
                    if (usersListBox.Items.Contains(user))
                        usersListBox.Items.Remove(user);
                }
            }
            catch { }
        }

        private void Disconnect()
        {
            if (clientSocket != null)
            {
                try
                {
                    clientSocket.Close();
                }
                catch { }
                clientSocket = null;
            }

            isConnected = false;
            statusLabel.Text = "❌ Bağlı Değil";
            statusLabel.ForeColor = Color.Red;
            connectButton.Enabled = true;
            disconnectButton.Enabled = false;
            sendButton.Enabled = false;
            usernameTextBox.Enabled = true;
            serverTextBox.Enabled = true;
            portNumericUpDown.Enabled = true;

            AddSystemMessage($"{username} çıkış yaptı");
        }

        protected override void OnFormClosing(FormClosingEventArgs e)
        {
            Disconnect();
            base.OnFormClosing(e);
        }
    }

    // Chat Mesaj Modeli
    public class ChatMessage
    {
        public string Gönderen { get; set; }
        public string Mesaj { get; set; }
        public string Zaman { get; set; }
        public string Tip { get; set; }
    }
}